<% tax_rate = 0.1r %>
<% total = @treatments.inject(0){|result,tre|result += tre.score } * 10 %>

<section class="invoice-box">
	<h1 class="invoice-h1">診療費請求書兼領収書</h1>
	<div class="invoice-up-side">
		<div class="name-amount">
			<p id="patient-name">氏名　<%= @patient_history.name %> 様</p>
			
			<p id="total-amount">ご請求額 <%= (total * (1 + tax_rate)).to_i%>円</p>
		</div>
		<div class="patient-information">
			<dl class="patient-information-dl">
				<div class="patient-information-dl-div"><dt>診療日</dt><dd>ああ</dd></div>
				<div class="patient-information-dl-div"><dt>受診科</dt><dd>ああ</dd></div>
				<div class="patient-information-dl-div"><dt>保険種類</dt><dd>ああ</dd></div>
				<div class="patient-information-dl-div"><dt>本人・家族</dt><dd>ああ</dd></div>
				<div class="patient-information-dl-div"><dt>負担割合</dt><dd>ああ</dd></div>
			</dl>
		</div>
	</div>
	<table class="invoice-table">

		<% @treatments.each do |tre| %>
			<tr>
				<th class="invoice-thtd",class="col-left"><%= tre.name %></th>
				<td class="invoice-thtd",class="col-mid-right"><%= tre.score %></td>
			
			</tr>
		<% end %>
		
		<tr>
			<td class="invoice-thtd">合計点数</td>
			<td class="invoice-thtd",class="col-mid-right"><%=total %></td>
		</tr>
	</table>

	<table>
		<tr>
			<th>保険分負担額</th>
			<td>😭</td>
		</tr>
		<tr>
			<th>保険外負担額</th>
			<td>😭</td>
		</tr>
	</table>

	<table>
		<tr>
			<th>領収金額</th>
			<td>😭</td>
		</tr>
	</table>


	


</section>



